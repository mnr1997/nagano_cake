<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-10 col-10 mx-md-auto mx-sm-auto mx-auto px-0">
      <div class="h2 pt-4">商品詳細</div>
      <div class="d-flex flex-row mt-5">
        <div class="col-6">
          <%= image_tag @item.get_image(300,200), size: "300x200", class: "object-fit-cover" %>
        </div>
        <div>
          <table class="table">
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre&.name %></td>
            </tr>
            <tr>
              <td><p class="m-0">税込価格</p><p class="m-0">(税抜価格)</p></td>
              <td><%= (@item.price * 1.1).round.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td><%= @item.is_active ? "販売中" : "販売中止" %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>