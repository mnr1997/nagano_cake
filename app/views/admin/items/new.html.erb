<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-10 col-10 mx-md-auto mx-sm-auto mx-auto rounded px-0">
      <div class="h2 pt-4">商品新規登録</div>
      <div>
        <%= form_with model: @item do |f| %>
          <div class="field">
            <%= f.label :image, "商品画像" %>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, placeholder: "商品名" %>
          </div>
          <div class="field">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, rows: "5", cols: "30", placeholder: "ここに説明文を記述します" %>
          </div>
          <div class="field">
            <%= f.label :genre_id %>
            <%= f.collection_select :genre_id, @genres, :id, :name, { include_blank: "-- 選択してください --" } %>
          </div>
          <div class="field">
            <%= f.label :price %>
            <%= f.number_field :price, placeholder: "1000" %>円
          </div>
          <div class="field">
            <%= f.label :is_active %>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active_true, "販売中" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active_false, "販売中止" %>
          </div>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>