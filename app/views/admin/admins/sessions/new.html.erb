<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-10 col-10 mx-md-auto mx-sm-auto mx-auto rounded px-0">
      <h2>管理者ログイン</h2>
      
      <div class="col-md-8 mx-auto">
        <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
          <div class="form-group row">
            <%= f.label :email, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class: "form-control" %>
            </div>
          </div>
        
          <div class="form-group row">
            <%= f.label :password, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <div class="actions col-4 mx-auto">
            <%= f.submit "ログイン", class: "btn btn-block btn-primary" %>
          </div>
        <% end %>
        
        <%= render "admin/admins/shared/links" %>
      </div>
    </div>
  </div>
</div>