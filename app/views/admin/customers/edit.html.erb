<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-10 col-10 mx-md-auto mx-sm-auto mx-auto px-0">
      <div class="h2 pt-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</div>
      <%= form_with model: [:admin, @customer] do |f| %>
      <table class="table table-borderless mt-5">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>　<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>　<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
        </tr>
        <tr>
          <th><%= f.label :postal_code %></th>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
        </tr>
        <tr>
          <th><%= f.label :address %></th>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        </tr>
        <tr>
          <th><%= f.label :telephone_number %></th>
          <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
        </tr>
        <tr>
          <th><%= f.label :email %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active_true, "有効" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active_false, "退会" %>
          </td>
        </tr>
      </table>
      <div>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>