<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-10 col-10 mx-md-auto mx-sm-auto mx-auto rounded px-0">
      <div class="h1">ジャンル一覧・追加</div>
      <div>
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        <% end %>
      </div>
      
      <table class="table mt-5">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th><th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>