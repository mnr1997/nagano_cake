<div class="container">
  <div class="row">
    <div class="col-2">
      <div class="mt-5 mb-2 text-center">ジャンル検索</div>
      <% @genres.each do |genre| %>
        <div><%= genre.name %></div>
      <% end %>
    </div>
    <div class="col-10 d-flex flex-row mt-5">
      <div>
        <%= image_tag @item.get_image(300,200), size: "300x200", class: "object-fit-cover" %>
      </div>
      <div class="ml-5">
        <div class="h4"><strong><%= @item.name %></strong></div>
        <div class="mt-3"><%= @item.introduction %></div>
        <div class="my-5">¥<%= (@item.price * 1.1).round.to_s(:delimited) %>(税込)</div>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>