<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-10 col-10 mx-md-auto mx-sm-auto mx-auto rounded px-0">
      <div class="h2 pt-4">会員情報編集</div>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field">
          氏名
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
  
        <div class="field">
          フリガナ
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
  
        <div class="field">
          <%= f.label :postal_code %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
        
        <div class="field">
          <%= f.label :address %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        
        <div class="field">
          <%= f.label :telephone_number %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        
        <div class="d-flex flex-row">
          <div class="col-3">
            <%= f.submit "編集内容を保存", class: "btn btn-block btn-success" %>
          </div>
          <div class="col-2">
            <%= link_to "退会する", customer_registration_path, class: "btn btn-block btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>