<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-10 col-10 mx-md-auto mx-sm-auto mx-auto rounded px-0">
      <div class="h2 pt-4">マイページ</div>
      <div class="wd-flex flex-row">
        <div>登録情報</div>
        <%= link_to "編集する", edit_customer_registration_path, class: "ml-3 btn btn-success" %>
      </div>
      <div class="mt-3">
        <table class="table table-bordered">
          <tr>
            <th>氏名</th>
            <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= current_customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= current_customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= current_customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= current_customer.email %></td>
          </tr>
        </table>
      </div>
      <div class="d-flex flex-row">
        <div>配送先　</div>
        <%= link_to "一覧を見る", edit_customer_registration_path, class: "ml-3 btn btn-primary" %>
      </div>
      <div class="d-flex flex-row mt-3">
        <div>注文履歴</div>
        <%= link_to "一覧を見る", edit_customer_registration_path, class: "ml-3 btn btn-primary" %>
      </div>
    </div>
  </div>
</div>