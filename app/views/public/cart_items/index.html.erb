<div class="container">
  <div class="row">
    <div class="col-md-10 col-sm-10 col-10 mx-md-auto mx-sm-auto mx-auto px-0">
      <div class="h2 pt-4">ショッピングカート</div>
      <table class="table mt-5">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.get_image(100,50), size: "200x120", class: "object-fit-cover" %><%= cart_item.item.name %></td>
              <td><%= (cart_item.item.price * 1.1).round.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= ((cart_item.item.price * 1.1) * cart_item.amount).round.to_s(:delimited) %></td>
              <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>